<?xml version="1.0"?>
<config>
    <api2>
        <resource_groups>
            <mobile_app translate="title" module="ignovate_mobile">
                <title>Mobile App</title>
                <sort_order>1000</sort_order>
            </mobile_app>
        </resource_groups>
        <resources>
            <products_api2 translate="title" module="ignovate_mobile">
                <group>mobile_app</group>
                <title>Store Products</title>
                <sort_order>1</sort_order>
                <model>ignovate_mobile/api2_products</model>
                <privileges>
                    <guest>
                        <retrieve>1</retrieve>
                    </guest>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_store_products_v2>
                        <route>/products/store/:store</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_store_products_v2>
                </routes>
                <versions>1</versions>
            </products_api2>
            <navigation_api2 translate="title" module="ignovate_mobile">
                <group>mobile_app</group>
                <title>Navigation Products</title>
                <sort_order>1</sort_order>
                <model>ignovate_mobile/api2_navigation</model>
                <privileges>
                    <guest>
                        <retrieve>1</retrieve>
                    </guest>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_store_category_products_v2>
                        <route>/products/category/:category/store/:store</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_store_category_products_v2>
                </routes>
                <versions>1</versions>
            </navigation_api2>
            <customer_api2 translate="title" module="ignovate_mobile">
                <group>mobile_app</group>
                <title>Customer</title>
                <sort_order>1</sort_order>
                <model>ignovate_mobile/api2_customer</model>
                <privileges>
                    <guest>
                        <create>1</create>
                    </guest>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_create_customerv2>
                        <route>/customer</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_create_customerv2>
                </routes>
                <versions>1</versions>
            </customer_api2>
            <store_api2 translate="title" module="ignovate_mobile">
                <group>mobile_app</group>
                <title>Site Info</title>
                <sort_order>1</sort_order>
                <model>ignovate_mobile/api2_site</model>
                <privileges>
                    <guest>
                        <retrieve>1</retrieve>
                    </guest>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_city_v2>
                        <route>/city</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_city_v2>
                    <route_entity_city_area_v2>
                        <route>/city/:id/areas</route>
                        <action_type>entity</action_type>
                        <version>2</version>
                    </route_entity_city_area_v2>
                </routes>
                <versions>1</versions>
            </store_api2>
            <cart_api2>
                <group>mobile_app</group>
                <title>Cart</title>
                <sort_order>1</sort_order>
                <model>ignovate_mobile/api2_cart</model>
                <privileges>
                    <admin>
                        <create>1</create>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_cart_v2>
                        <route>/addcart</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_cart_v2>
                </routes>
                <versions>1</versions>
            </cart_api2>
            <order_api2>
                <group>mobile_app</group>
                <title>Order</title>
                <sort_order>1</sort_order>
                <model>ignovate_mobile/api2_order</model>
                <privileges>
                    <admin>
                        <create>1</create>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_order_v2>
                        <route>/processorder</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_order_v2>
                </routes>
                <versions>1</versions>
            </order_api2>
        </resources>
    </api2>
</config>
