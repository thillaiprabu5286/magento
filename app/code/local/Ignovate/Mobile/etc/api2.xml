<?xml version="1.0"?>
<config>
    <api2>
        <resource_groups>
            <mobile_app translate="title" module="ignovate_mobile">
                <title>Mobile App</title>
                <sort_order>1000</sort_order>
            </mobile_app>
        </resource_groups>
        <resources>
            <products_api2 translate="title" module="ignovate_mobile">
                <group>mobile_app</group>
                <title>Store Products</title>
                <sort_order>1</sort_order>
                <model>ignovate_mobile/api2_products</model>
                <privileges>
                    <guest>
                        <retrieve>1</retrieve>
                    </guest>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_store_products_v2>
                        <route>/products/store/:store/customer/:customer_id</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_store_products_v2>
                </routes>
                <versions>1</versions>
            </products_api2>
            <navigation_api2 translate="title" module="ignovate_mobile">
                <group>mobile_app</group>
                <title>Navigation Products</title>
                <sort_order>1</sort_order>
                <model>ignovate_mobile/api2_navigation</model>
                <privileges>
                    <guest>
                        <retrieve>1</retrieve>
                    </guest>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_store_category_products_v2>
                        <route>/products/category/:category/store/:store/customer/:customer_id</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_store_category_products_v2>
                </routes>
                <versions>1</versions>
            </navigation_api2>
            <customer_api2 translate="title" module="ignovate_mobile">
                <group>mobile_app</group>
                <title>Customer</title>
                <sort_order>1</sort_order>
                <model>ignovate_mobile/api2_customer</model>
                <privileges>
                    <guest>
                        <create>1</create>
                    </guest>
                    <admin>
                        <create>1</create>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_create_customerv2>
                        <route>/customer</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_create_customerv2>
                </routes>
                <versions>1</versions>
            </customer_api2>
            <customer_orders_api2 translate="title" module="ignovate_mobile">
                <group>mobile_app</group>
                <title>Customer Orders</title>
                <sort_order>1</sort_order>
                <model>ignovate_mobile/api2_customer_orders</model>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                </privileges>
                <routes>
                    <route_entity_order_historyv2>
                        <route>/customer/orders/:id/store/:store_id</route>
                        <action_type>entity</action_type>
                        <version>2</version>
                    </route_entity_order_historyv2>
                </routes>
                <versions>1</versions>
            </customer_orders_api2>
            <store_api2 translate="title" module="ignovate_mobile">
                <group>mobile_app</group>
                <title>Site Info</title>
                <sort_order>1</sort_order>
                <model>ignovate_mobile/api2_site</model>
                <privileges>
                    <guest>
                        <retrieve>1</retrieve>
                    </guest>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_city_v2>
                        <route>/city</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_city_v2>
                    <route_entity_city_area_v2>
                        <route>/city/:id/areas</route>
                        <action_type>entity</action_type>
                        <version>2</version>
                    </route_entity_city_area_v2>
                </routes>
                <versions>1</versions>
            </store_api2>
            <store_quote_api2>
                <group>mobile_app</group>
                <title>Store Quote</title>
                <sort_order>1</sort_order>
                <model>ignovate_mobile/api2_site_quote</model>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                </privileges>
                <routes>
                    <route_entity_customer_active_quote_v2>
                        <route>/store/:store_id/customer/:customer_id</route>
                        <action_type>entity</action_type>
                        <version>2</version>
                    </route_entity_customer_active_quote_v2>
                </routes>
                <versions>1</versions>
            </store_quote_api2>
            <cart_api2>
                <group>mobile_app</group>
                <title>Cart</title>
                <sort_order>1</sort_order>
                <model>ignovate_mobile/api2_cart</model>
                <privileges>
                    <admin>
                        <create>1</create>
                        <update>1</update>
                        <retrieve>1</retrieve>
                        <delete>1</delete>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_cart_v2>
                        <route>/addcart</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_cart_v2>
                    <route_entity_update_cart_v2>
                        <route>/addcart/:quote_id</route>
                        <action_type>entity</action_type>
                        <version>2</version>
                    </route_entity_update_cart_v2>
                    <route_entity_get_cart_v2>
                        <route>/cart/:quote_id/store/:store_id</route>
                        <action_type>entity</action_type>
                        <version>2</version>
                    </route_entity_get_cart_v2>
                    <route_entity_delete_cart_v2>
                        <route>/cart/:quote_id/store/:store_id/product/:item_id</route>
                        <action_type>entity</action_type>
                        <version>2</version>
                    </route_entity_delete_cart_v2>
                </routes>
                <versions>1</versions>
            </cart_api2>
            <order_api2>
                <group>mobile_app</group>
                <title>Order</title>
                <sort_order>1</sort_order>
                <model>ignovate_mobile/api2_order</model>
                <privileges>
                    <admin>
                        <create>1</create>
                        <retrieve>1</retrieve>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_order_v2>
                        <route>/processorder</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_order_v2>
                    <route_entity_order_get_v2>
                        <route>/order/:id</route>
                        <action_type>entity</action_type>
                        <version>2</version>
                    </route_entity_order_get_v2>
                </routes>
                <versions>1</versions>
            </order_api2>
            <customer_address_api2>
                <group>mobile_app</group>
                <title>Customer Address</title>
                <sort_order>1</sort_order>
                <model>ignovate_mobile/api2_customer_address</model>
                <privileges>
                    <admin>
                        <create>1</create>
                        <retrieve>1</retrieve>
                        <update>1</update>
                    </admin>
                </privileges>
                <routes>
                    <route_entity_get_address_v2>
                        <route>/customer/:customer_id/address/:address_id</route>
                        <action_type>entity</action_type>
                        <version>2</version>
                    </route_entity_get_address_v2>
                    <route_collection_get_address_v2>
                        <route>/customer/address/:customer_id</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_get_address_v2>
                    <route_collection_create_address_v2>
                        <route>/customer/address/:customer_id</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_create_address_v2>
                </routes>
                <versions>1</versions>
            </customer_address_api2>
            <customer_wishlist_api2>
                <group>mobile_app</group>
                <title>Customer Wishlist</title>
                <sort_order>1</sort_order>
                <model>ignovate_mobile/api2_customer_wishlist</model>
                <privileges>
                    <admin>
                        <create>1</create>
                        <retrieve>1</retrieve>
                        <delete>1</delete>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_customer_wishlist>
                        <route>/wishlist/:customer_id/store/:store_id</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_customer_wishlist>
                    <route_entity_customer_wishlist>
                        <route>/wishlist/:customer_id/store/:store_id/product/:product_id</route>
                        <action_type>entity</action_type>
                        <version>2</version>
                    </route_entity_customer_wishlist>
                    <route_entity_customer_get_wishlist>
                        <route>/wishlist/:customer_id/store/:store_id</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_entity_customer_get_wishlist>
                </routes>
                <versions>1</versions>
            </customer_wishlist_api2>
            <querysearch_api2>
                <group>mobile_app</group>
                <title>Search</title>
                <sort_order>1</sort_order>
                <model>ignovate_mobile/api2_querysearch</model>
                <privileges>
                    <admin>
                        <create>1</create>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_search>
                        <route>/querysearch</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_search>
                </routes>
                <versions>1</versions>
            </querysearch_api2>
            <homescreen_api2>
                <group>mobile_app</group>
                <title>Homescreen</title>
                <sort_order>1</sort_order>
                <model>ignovate_mobile/api2_homescreen</model>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                </privileges>
                <routes>
                    <route_collection_homescreen>
                        <route>/homescreen/store/:store/limit/:limit</route>
                        <action_type>collection</action_type>
                        <version>2</version>
                    </route_collection_homescreen>
                </routes>
                <versions>1</versions>
            </homescreen_api2>
        </resources>
    </api2>
</config>
